# .editorconfig

root = true

# Configuración para todos los archivos
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Configuración específica para archivos de estilos (SASS, CSS)
# Es una convención muy común usar 2 espacios para estos archivos.
[*.{scss,css}]
indent_size = 4

# Configuración específica para archivos Markdown, donde no se suelen
# eliminar los espacios al final de la línea (se usan para saltos de línea).
[*.md]
trim_trailing_whitespace = false
